<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/custom_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/background_white" >

        <TextView
            android:id="@+id/tv_basic_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:text="@string/basic_setting"
            android:textColor="@color/primary"
            android:textSize="15sp" />

        <ListView
            android:id="@+id/lv_basicSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_basic_setting"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/background_white" >

        <TextView
            android:id="@+id/tv_more_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:text="@string/more_setting"
            android:textColor="@color/primary"
            android:textSize="15sp" />

        <ListView
            android:id="@+id/lv_moreSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_more_setting"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" >
        </ListView>
    </RelativeLayout>

</LinearLayout>